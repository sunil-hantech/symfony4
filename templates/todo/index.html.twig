{% extends 'base.html.twig' %}

{% block title %}Hello TodoController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Todos! âœ…</h1>


		<form method="post" action="{{path('saveTodo')}}">
			<input name="title" placeholder="title"/>
			<textarea name="description" placeholder="description"/></textarea>
		<button>Save</button>
	</form>

	<br>
	<br>

	{% if todos | length >0 %}

		<ul>
			{% for todo in todos %}
				<li>{{ todo.tile }}  <a href="{{path('updateTodo',{todo:todo.id})}}"> update</a> </li>
				{% endfor %}
			</ul>
			{% endif%}
		</div>
	{% endblock %}
